<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".AddAlamatActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kontak"
        android:textColor="@color/Hijau" />

        <EditText
            android:id="@+id/namaLengkapEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/lavender_border"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:hint="Nama Lengkap"
            android:paddingStart="12dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp" />

        <EditText
            android:id="@+id/nomorTeleponEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/lavender_border"
            android:hint="Nomor Telepon"
            android:paddingStart="12dp"
            android:inputType="number"
            android:paddingEnd="10dp"
            android:paddingTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Alamat"
        android:textColor="@color/Hijau"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/kotaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/lavender_border"
        android:hint="Kota"
        android:padding="12dp" />

    <EditText
        android:id="@+id/namaJalanEditText"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="20dp"
        android:background="@drawable/lavender_border"
        android:hint="Nama Jalan, Gedung, No.Rumah"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp" />

    <EditText
        android:id="@+id/detailLainnyaEditText"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/lavender_border"
        android:hint="Detail Lainnya"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/simpanButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="13dp"
        android:text="Simpan"
        android:backgroundTint="@color/Hijau"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"/>


</com.google.android.material.appbar.AppBarLayout>
