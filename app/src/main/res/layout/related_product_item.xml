<?xml version="1.0" encoding="utf-8"?>
<!-- related_product_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewProductRelated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageViewProductRelated"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kita"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textViewProductNameRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewProductPriceRelated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/product_price_format"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewProductStatusRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Status"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />

        <!-- Tambahkan elemen tampilan lainnya sesuai kebutuhan -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
