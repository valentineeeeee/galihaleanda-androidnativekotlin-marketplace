<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bayar2Activity">

    <include
        android:id="@+id/dynamicTextView"
        layout="@layout/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:clipToPadding="false"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textViewProductNameBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/poppins_medium"
            android:text="alamat"
            android:textColor="@color/Hijau"
            android:textSize="19dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="123dp"
        android:background="#ECECEC" />

    <TextView
        android:id="@+id/textViewProductAddressBayar"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="140dp"
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Nama Barang"
        android:textColor="@color/Hijau" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="176dp"
        android:background="#ECECEC" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="178dp"
        android:background="@color/white"
        android:src="@drawable/kita" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="399dp"
        android:background="#ECECEC" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="1in"
        android:layout_marginTop="400dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="20dp">

            <!-- textViewNamaLengkap -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewNamaLengkap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap :"
                    android:layout_weight="1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textViewNamaLengkap1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="test" />
            </LinearLayout>

            <!-- textViewNoHp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewNomorHp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No HP :"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewNomorHp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="test" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewKota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kota :"
                    android:layout_weight="1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewKota1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="test" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewNamaJalan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Jalan :"
                    android:layout_weight="1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewNamaJalan1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="test" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDetailLainnya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detail Lainnya :"
                    android:visibility="visible"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewDetailLainnya1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:text="test" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="610dp"
        android:background="#ECECEC" />


    <RelativeLayout
            android:id="@+id/beliSekarangButton"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="650dp"
            android:background="@drawable/bg_btn_beli">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Beli Sekarang"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:textSize="18dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:text="Total Pembayaran" />

    <TextView
        android:id="@+id/textViewTotalPembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="677dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="Rp. 200000" />


</RelativeLayout>