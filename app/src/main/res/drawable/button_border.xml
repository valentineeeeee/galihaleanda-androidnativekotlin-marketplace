<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna batas (stroke) dan ketebalan -->
    <stroke
        android:width="2dp"
        android:color="@color/colorPrimary" /> <!-- Ganti dengan warna yang diinginkan -->

    <!-- Warna latar belakang -->
    <solid android:color="#FFFFFF" /> <!-- Ganti dengan warna latar belakang yang diinginkan -->

    <!-- Sudut lengkung (opsional) -->
    <corners android:radius="0dp" /> <!-- Ganti dengan radius yang diinginkan -->
</shape>
